<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1">
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXIT"
            android:textSize="25dp"
            android:id="@+id/button" android:layout_gravity="right"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="64dp">
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center">
        <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Audio"
                android:id="@+id/audio" android:layout_gravity="center_horizontal"/>
        <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Video"
                android:id="@+id/video" android:layout_gravity="center_horizontal"/>
        <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="System control"
                android:id="@+id/system" android:layout_gravity="center_horizontal"/>
        <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="File viewer"
                android:id="@+id/files" android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" android:weightSum="1">
        <Button
                android:layout_width="86pt"
                android:layout_height="wrap_content"
                android:text="100"
                android:id="@+id/button6" android:layout_gravity="bottom"/>
        <Button
                android:layout_width="86pt"
                android:layout_height="wrap_content"
                android:text="200"
                android:id="@+id/button7" android:layout_gravity="bottom"/>
    </LinearLayout>
</LinearLayout>

