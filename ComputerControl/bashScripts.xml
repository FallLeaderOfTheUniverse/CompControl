<scripts>
    <bash>
        <name>amarok</name>
        <make>amarok</make>
    </bash>

    <bash>
        <name>amarokplay</name>
        <make>amarok -p</make>
    </bash>

    <bash>
        <name>amaroknext</name>
        <make>amarok -f</make>
    </bash>

    <bash>
        <name>mute</name>
        <make>amixer set Master 0%</make>
    </bash>

    <bash>
        <name>volumeup</name>
        <make>amixer set Master 5+</make>
    </bash>

    <bash>
        <name>volumedown</name>
        <make>amixer set Master 5-</make>
    </bash>
    <bash>
        <name>volume set</name>
        <make>amixer sset -q Master $(PERCENT)</make>
    </bash>
    <bash>
        <name>video play</name>
        <make>vlc -f $(LINK)</make>
    </bash>
    <bash>
        <name>music play</name>
        <make>vlc $(LINK)</make>
    </bash>
</scripts>